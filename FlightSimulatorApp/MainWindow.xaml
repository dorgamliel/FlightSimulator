<Window x:Class="FlightSimulatorApp.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        xmlns:Views="clr-namespace:FlightSimulatorApp.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="1.3*" />
        </Grid.RowDefinitions>
        <m:Map CredentialsProvider="JLx9WovYO4EXlN3HBVqS~vg5tR51fYAhhHBcrWzsiWg~AibXYJKaZSgGhSViyEthBamV_VIYH1E9NZ8EWIr89kxDDqoE_7pTjNFdh8IxUWEX" Mode="Aerial" Center="47.640,-122.125" ZoomLevel="10" Grid.ColumnSpan="3" Grid.RowSpan="4" Margin="0,0,0.667,0">
            <m:MapLayer>
                <Image Source="resources/plane.png" Stretch="UniformToFill" Margin="233,241,241,233">
                </Image>
            </m:MapLayer>
        </m:Map>
        <StackPanel Grid.Column="3" Grid.RowSpan="2" Margin="0,0,0,5">
            <TextBlock FontSize="10" Padding="10">Heading (deg):</TextBlock>
            <TextBlock FontSize="10" Padding="10">Vertical Speed:</TextBlock>
            <TextBlock FontSize="10" Padding="10">Ground Speed (kt):</TextBlock>
            <TextBlock FontSize="10" Padding="10">Airspeed (kt):</TextBlock>
            <TextBlock FontSize="10" Padding="10">GPS Altitude (ft):</TextBlock>
            <TextBlock FontSize="10" Padding="10">Roll (deg):</TextBlock>
            <TextBlock FontSize="10" Padding="10">Pitch (deg):</TextBlock>
            <TextBlock FontSize="10" Padding="10">Altimeter Altitude (ft):</TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="4" Grid.RowSpan="2" Margin="0.333,0,-0.333,0">
            <TextBlock Text="{Binding VM_heading}" FontSize="10" Padding="10"/>
            <TextBlock Text="{Binding VM_verticalSpeed}" FontSize="10" Padding="10"/> 
            <TextBlock Text="{Binding VM_groundSpeed}" FontSize="10" Padding="10"/> 
            <TextBlock Text="{Binding VM_airSpeed}" FontSize="10" Padding="10"/> 
            <TextBlock Text="{Binding VM_GPSAlt}" FontSize="10" Padding="10"/> 
            <TextBlock Text="{Binding VM_roll}" FontSize="10" Padding="10"/> 
            <TextBlock Text="{Binding VM_pitch}" FontSize="10" Padding="10"/> 
            <TextBlock Text="{Binding VM_AltimeterAlt}" FontSize="10" Padding="10"/> 
        </StackPanel>
        <Views:Joystick x:Name="JoyStick" Grid.Row="3" Grid.Column="3" Margin="51,1,19.333,8.667" Grid.ColumnSpan="2"/>
        <Views:Sliders  Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,80,0.333,0.667" Grid.RowSpan="2" />
    </Grid>
</Window>
